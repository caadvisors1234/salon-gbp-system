# General
APP_ENV=dev
APP_PUBLIC_BASE_URL=http://localhost:8080

# Backend
API_CORS_ORIGINS=["http://localhost:8080","http://localhost:5173"]
DATABASE_URL=postgresql+psycopg://salon_gbp:salon_gbp@db:5432/salon_gbp
REDIS_URL=redis://redis:6379/0

# Supabase Auth (Auth only)
# SUPABASE_URL=https://<project-ref>.supabase.co
SUPABASE_URL=
# If empty, backend will use `${SUPABASE_URL}/auth/v1/keys`
SUPABASE_JWKS_URL=
SUPABASE_JWT_AUDIENCE=authenticated

# Token encryption (AES-256-GCM)
# 32-byte key encoded as URL-safe base64 (recommended). Example generation:
# python -c "import os,base64;print(base64.urlsafe_b64encode(os.urandom(32)).decode())"
TOKEN_ENC_KEY_B64=

# OAuth state signing (independent from Supabase)
OAUTH_STATE_SECRET=

# Google OAuth / GBP
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=http://localhost:8080/api/oauth/google/callback
GOOGLE_OAUTH_SCOPES=https://www.googleapis.com/auth/business.manage openid email

# Meta / Instagram (Phase 2)
META_APP_ID=
META_APP_SECRET=
META_REDIRECT_URI=http://localhost:8080/api/oauth/meta/callback
META_OAUTH_SCOPES=instagram_basic,pages_show_list

# Media storage (VPS local path inside containers)
MEDIA_ROOT=/data/media
MEDIA_PUBLIC_PATH=/media
MEDIA_RETENTION_DAYS=30

# Scraper
SCRAPER_USER_AGENT=SalonGBPSystem/0.1
